{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build-sbf",
            "type": "shell",
            "command": "~/.cargo/bin/cargo", // note: full path to the cargo
            "args": [
                "build-sbf",
                "--tools-version",
                "v1.36",
                // "arg1"
            ],
            "group": {
                "kind": "build",
                //"isDefault": true
            }
        },
        {
            "label": "cargo test",
            "type": "shell",
            "command": "~/.cargo/bin/cargo", // note: full path to the cargo
            "args": [
                "test",
                //"--tools-version",
                //"v1.36",
                // "arg1"
            ],
            "group": {
                "kind": "build",
                //"isDefault": false
            }
        },
        {
            "label": "solana deploy",
            "type": "shell",
            "command": "~/.local/share/solana/install/active_release/bin/solana", // note: full path to solana
            "args": [
                "program",
                "deploy",
                "${workspaceFolder}/target/deploy/solana_nft_staking_program.so"
                // "arg1"
            ],
            "group": {
                "kind": "build",
                //"isDefault": false
            }
        }
    ]
}